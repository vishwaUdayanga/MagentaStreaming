<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/regular_genre_item"
    android:layout_width="168dp"
    android:layout_height="130dp"
    android:layout_margin="10dp"
    android:background="@drawable/music_item">

    <ImageView
        android:id="@+id/regular_genre_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="@color/pink"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/regular_genre_text"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="GenreType"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@id/regular_genre_img"
        app:layout_constraintStart_toStartOf="@id/regular_genre_img" />
</androidx.constraintlayout.widget.ConstraintLayout>
