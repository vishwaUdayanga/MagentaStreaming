<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/playerContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/black"
    tools:context=".Activities.PlayerActivity">

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/back"
        android:padding="6dp"
        android:id="@+id/back_icon"
        android:background="@drawable/round_bg" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:id="@+id/card"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/back_icon">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_bg"
            android:src="@drawable/sample_bg"
            android:id="@+id/cover_art"
            android:scaleType="centerCrop" />
    </RelativeLayout>
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="I got my eye"
        android:id="@+id/title"
        android:layout_below="@+id/card"
        android:gravity="center_horizontal"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:textSize="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lana del"
        android:id="@+id/artist"
        android:layout_below="@+id/title"
        android:gravity="center_horizontal"
        android:textColor="@color/gray"
        android:layout_marginTop="10dp"
        android:textSize="15dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/artist"
        android:layout_marginTop="20dp"
        android:padding="0dp"
        android:id="@id/seekbar_layout" >

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/seekbar"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="1:1"
            android:id="@+id/duration_played"
            android:textColor="@color/white"
            android:layout_below="@+id/seekbar"
            android:layout_alignParentStart="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="3:00"
            android:layout_below="@+id/seekbar"
            android:id="@+id/duration_total"
            android:textColor="@color/white"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/process_section"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/seekbar_layout">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="0dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/backward_step_solid"
                android:id="@+id/go_to_previous"
                android:layout_centerVertical="true"/>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:elevation="1dp"
                app:borderWidth="0dp"
                app:pressedTranslationZ="1dp"
                android:backgroundTint="@color/pink"
                android:src="@drawable/pause_solid"
                android:id="@+id/play_pause"
                android:layout_toEndOf="@+id/go_to_previous"
                android:focusable="true"
                android:clickable="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/backward_step_solid"
                android:rotation="180"
                android:id="@+id/go_next"
                android:layout_toEndOf="@+id/play_pause"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/heart_solid"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

</RelativeLayout>